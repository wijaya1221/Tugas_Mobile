<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayout">

    <TextView
        android:id="@+id/nomorAngkot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="02"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/warnaAngkot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Kuning"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nomorAngkot_txt"
        app:layout_constraintStart_toEndOf="@+id/nomorAngkot_txt"
        app:layout_constraintTop_toTopOf="@+id/nomorAngkot_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ruteAngkot_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:ellipsize="end"
        android:freezesText="true"
        android:imeOptions="actionNext"
        android:maxWidth="305dp"
        android:maxLines="20"
        android:nextFocusDown="@null"
        android:selectAllOnFocus="true"
        android:text="Jl. Karya – Bundaran Sekip – Petisah – Plaza Medan Fair – Jl. Iskandar Muda –
Simp. Brimob – Simp. Kampus – P. Bulan – Simp. Pos – Titi Kuning – Simp. Limun – Jl.
Sisingamangaraja – Jl. Halat – Jl. AR Hakim – Jl. Denai – Perumnas Mandala"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/nomorAngkot_txt"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ruteAngkot_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomorAngkot_txt"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pngangkot" />
</androidx.constraintlayout.widget.ConstraintLayout>